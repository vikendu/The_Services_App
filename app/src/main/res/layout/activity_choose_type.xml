<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChooseTypeActivity"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/idWhoYouWillBe"
        android:layout_width="347dp"
        android:layout_height="93dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/who_will_you_be_text__1_"
        android:contentDescription="@string/who_will_you_be" />

    <ImageView
        android:id="@+id/idIwillProvideServices"
        android:layout_width="298dp"
        android:layout_height="89dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="57dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idWhoYouWillBe"
        app:srcCompat="@drawable/i_will_give_services"
        android:contentDescription="@string/i_will_be_providing_services"/>

    <ImageView
        android:id="@+id/idIwillBeUsingServices"
        android:layout_width="315dp"
        android:layout_height="86dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="193dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idIwillProvideServices"
        app:srcCompat="@drawable/i_will_be_using_services"
        android:contentDescription="@string/i_will_be_using_the_services"/>

    <TextView
        android:id="@+id/idCreditsBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="178dp"
        android:layout_marginTop="162dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="12dp"
        android:text="@string/copyright_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idIwillBeUsingServices" />
</androidx.constraintlayout.widget.ConstraintLayout>